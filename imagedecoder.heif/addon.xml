<?xml version="1.0" encoding="UTF-8"?>
<addon id="imagedecoder.heif" version="1.1.0.1" name="HEIF image decoder" provider-name="spiff">
  <requires>
    <import addon="kodi.binary.global.main" version="1.0.14"/>
    <import addon="kodi.binary.instance.imagedecoder" version="2.0.0"/>
  </requires>
  <extension point="kodi.imagedecoder" library_linux="imagedecoder.heif.so.1.1.0" extension=".heif|.heic" mimetype="image/heif|image/heic"/>
  <extension point="xbmc.addon.metadata">
    <summary>HEIF file format decoder</summary>
    <description>High Efficiency Image File Format (HEIF) is a file format employing HEVC (h.265) image coding for the best compression ratios currently possible.

Support for this is provided by ISO/IEC 23008-12:2017 compliant libheif.</description>
    <platform/>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/imagedecoder.heif</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
