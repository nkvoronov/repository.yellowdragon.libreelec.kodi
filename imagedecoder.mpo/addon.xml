<?xml version="1.0" encoding="UTF-8"?>
<addon id="imagedecoder.mpo" version="1.1.0.1" name="MPO image decoder" provider-name="spiff">
  <requires>
    <import addon="kodi.binary.global.main" version="1.0.14"/>
    <import addon="kodi.binary.instance.imagedecoder" version="2.0.0"/>
  </requires>
  <extension point="kodi.imagedecoder" library_linux="imagedecoder.mpo.so.1.1.0" extension=".mpo" mimetype="image/mpo"/>
  <extension point="xbmc.addon.metadata">
    <summary>Multi Picture Object (MPO) image decoder</summary>
    <description>An addon to decode MPO (multiple picture object) files. These are used mainly for 3D cameras and the Nintendo 3DS.</description>
    <platform/>
    <license>GPL-2.0+</license>
    <source>https://github.com/xbmc/imagedecoder.mpo</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
